<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <form action="/hod/getTable" method="post">
        <select name="course" id="course">
            <option value="">select a course</option>
            <option value="Diploma">Diploma</option>
            <option value="Degree">Degree</option>
        </select>
        
        <select name="branch" id="branch">
            <option value="">select a branch</option>
        </select>
        <select name="sem" id="sem">
            <option value="">select a semister</option>
        </select>
        <select name="subject" id="subject">
            <option value="">select a subject</option>
        </select>
        <button type="submit" id="submit_btn">submit</button>
    </form>

    <form action="/hod/addAttendance" method="post">

        
    
        <table border="1">
            <tr>
                <th>srno</th>
                <th><input type="checkbox" name="selectAll" id="selectAll"> <label for="selectAll">selectAll</label></th>
                <th>enrollment no</th>
                <th>name</th>
            </tr>
            <% if(attendance != "no"){ %>
    
                <% for(let i = 0; i < attendance.length; i++){ %>
                    <tr>
                        <td><%= attendance[i].sr_no %></td>
                        <td><input type="checkbox" name="<%= attendance[i].Enrollment_no %>" class="options" id="<%= attendance[i].Enrollment_no %>"> <label id="<%= attendance[i].Enrollment_no %>_label" for="<%= attendance[i].Enrollment_no %>" class="label_name">p/a</label></td>
                        <td><%= attendance[i].Enrollment_no %></td>
                        <td><%= attendance[i].Student_name %></td>
                    </tr>
                <% } %>
            <% } %>
        </table>
    
        <input type="radio" name="attendance" id="present" value="present">
        <label for="present">present</label>
        <input type="radio" name="attendance" id="absent" value="absent">
        <label for="absent">absent</label>
        <button id="reset">reset</button>
        <button type="submit" id="submit">submit</button>
    </form>
    <script src="../js/dummy.js" type="module"></script>
</body>
</html>